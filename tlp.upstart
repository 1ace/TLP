# TLP settings on system startup/shutdown

description "tlp"

start on ( virtual-filesystems and runlevel [2345] )
stop on runlevel [!2345]

env TLP=/usr/sbin/tlp

pre-start script
    [ -x $TLP ] || exit 4
    $TLP init start

end script

post-stop script
    [ -x $TLP ] || exit 4
    $TLP init stop

end script


