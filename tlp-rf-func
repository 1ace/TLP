#!/bin/sh
# tlp - rf switch functions

# ----------------------------------------------------------------------------
# Definitions
RFKILL="/sbin/rfkill"

# ----------------------------------------------------------------------------
# Functions
get_ctrl_device () { # $1: rftype
	local i
	
	case $1 in
		wwan|bluetooth)
			for i in /sys/class/rfkill/rfkill* ; do
				if [ -e $i/type  ] && [ "$(cat $i/type)" = "$1" ]; then 
					devc="$i/state"
					return
				fi
			done
			devc=""
			;;

		wifi)
			for i in /sys/class/rfkill/rfkill* ; do
				if [ "$(cat $i/type)" = "wlan" ]; then 
					devc="$i/state"
					return
				fi
			done
			devc=""
			;;
        
        *)
			echo "Error: no such device \"$1\"" 1>&2
			devc=""
			;;
	esac
}

check2200 () { # $1: rftype
	local i
	
	is2200="0"
	if [ $1 = "wifi" ]; then
		devc=""
		if [ -d /sys/bus/pci/drivers/ipw2200 ]; then
			for i in /sys/bus/pci/drivers/ipw2200/*/rf_kill ; do
				devc=$i
			done
			[ -n "$devc" ] && is2200="1"
		fi
	fi
}

err_no_root_priv () {
	echo "Error: root privilege needed. Please call me with sudo." 1>&2
}

device_state () { # $1: rftype
	local state
	
	state=254
	check2200 $1
	if [ "$is2200" = "1" ]; then
		if [ -n "$devc" ]; then
			state=$(cat $devc)
			state=$((! $state))
		fi
	else 
		get_ctrl_device $1	
		if [ -n "$devc" ]; then
			state=$(cat $devc)
		fi
	fi

	return $state
}

device_on () { # $1: rftype 
	device_state $1
	
	if [ "$is2200" = "1" ]; then
		if [ "$(id -u)" = "0" ]; then
			if [ -n "$devc" ]; then
				echo -n 0 > $devc
			fi
			echo -n 0 > $devc
		else
			err_no_root_priv
		fi
	elif [ -x $RFKILL ]; then
		$RFKILL unblock $1
	else
		if [ "$(id -u)" = "0" ]; then
			if [ -n "$devc" ]; then
				echo -n 1 > $devc
			fi
		else
			err_no_root_priv
		fi
	fi
}

device_off () { # $1: rftype
	device_state $1
	
	if [ "$is2200" = "1" ]; then
		if [ "$(id -u)" = "0" ]; then
			if [ -n "$devc" ]; then
				echo -n 1 > $devc
			fi
		else
			err_no_root_priv
		fi
	elif [ -x $RFKILL ]; then
		$RFKILL block $1
	else
		if [ "$(id -u)" = "0" ]; then
			if [ -n "$devc" ]; then
				echo -n 0 > $devc
			fi
		else
			err_no_root_priv
		fi
	fi
}

device_toggle () { # $1: rftype
	local state
	
	device_state $1
	state=$?
		
	if [ "$is2200" = "1" ]; then
		if [ "$(id -u)" = "0" ]; then
			if [ -n "$devc" ]; then
				case $state in
					0) echo -n 1 > $devc ;;
					1) echo -n 0 > $devc ;;
					*) ;;
				esac
			fi
		else
			err_no_root_priv
		fi
	elif [ -x $RFKILL ]; then
		case $state in
			0) $RFKILL unblock $1 ;;
			1) $RFKILL block $1   ;;				
			*) ;;
		esac
	else
		if [ "$(id -u)" = "0" ]; then
			device_state $1
			state = $?
			if [ -n "$devc" ]; then
				case $state in
					0) echo -n 1 > $devc ;;
					1) echo -n 0 > $devc ;;
					*) ;;
				esac
			fi
		else
			err_no_root_priv
		fi
	fi
}

echo_device_state () { # $1: rftype
	local state
	
	device_state $1
	state=$?
		
	case $1 in
		bluetooth)
			devstr="bluetooth"
			;;
			
		wifi)
			devstr="wifi     "
			;;
		
		wwan)
			devstr="wwan     "
			;;
			
		*)
			devstr=$1
			;;
	esac
	
	case $state in
		0) 
			echo "$devstr = off (software)"
			;;

		1) 
			echo "$devstr = on"
			;;
            
		2) 
			echo "$devstr = off (hardware)"
			;;
			
		254) 
			echo "$devstr = none (no device)"
			;;

		*)
            echo "$devstr = unknown state \"$state\""
	esac
}

